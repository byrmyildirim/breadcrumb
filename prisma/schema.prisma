// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Note that some adapters may set a maximum length for the String type by default, please ensure your strings are long
// enough when changing adapters.
// See https://www.prisma.io/docs/orm/reference/prisma-schema-reference#string for more information
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id                  String    @id
  shop                String
  state               String
  isOnline            Boolean   @default(false)
  scope               String?
  expires             DateTime?
  accessToken         String
  userId              BigInt?
  firstName           String?
  lastName            String?
  email               String?
  accountOwner        Boolean   @default(false)
  locale              String?
  collaborator        Boolean?  @default(false)
  emailVerified       Boolean?  @default(false)
  refreshToken        String?
  refreshTokenExpires DateTime?
}

model ProductFeed {
  id              String   @id @default(cuid())
  shop            String
  name            String   // Feed name like "Test", "Google Ana Feed"
  feedType        String   @default("google") // "google" or "meta"
  language        String   @default("tr") // Feed language
  collectionId    String?  // Optional collection filter (null = all products)
  collectionTitle String?  // Collection title for display
  stockOnly       Boolean  @default(false) // Only include in-stock products
  productCount    Int      @default(0) // Cached product count
  lastGenerated   DateTime? // Last time feed was generated
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([shop])
}


model MegaMenu {
  id        String   @id @default(cuid())
  shop      String   @unique
  config    String   // JSON string of menu configuration
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Ticimax API yapılandırması
model TicimaxConfig {
  id           String   @id @default(cuid())
  shop         String   @unique
  wsdlUrl      String   // Ticimax WSDL URL
  uyeKodu      String   // Ticimax UyeKodu (API Key)
  isActive     Boolean  @default(true)
  lastSync     DateTime?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

// Senkronizasyon log tablosu
model TicimaxSyncLog {
  id              String    @id @default(cuid())
  shop            String
  syncType        String    // "orders" | "customers"
  status          String    // "pending" | "success" | "failed"
  ordersProcessed Int       @default(0)
  ordersFailed    Int       @default(0)
  errorMessage    String?
  startedAt       DateTime  @default(now())
  completedAt     DateTime?

  @@index([shop, syncType])
}

// Aktarılan siparişlerin takibi
model TicimaxOrder {
  id                 String    @id @default(cuid())
  shop               String
  ticimaxOrderNo     String    // Ticimax sipariş numarası
  shopifyOrderId     String?   // Shopify'da oluşturulan sipariş ID
  shopifyOrderName   String?   // Shopify sipariş adı (#1001 gibi)
  shopifyCustomerId  String?   // Eşleştirilen/oluşturulan müşteri ID
  customerName       String
  customerEmail      String?
  customerPhone      String?
  totalAmount        Float
  status             String    // "pending" | "synced" | "failed"
  errorMessage       String?
  orderData          String    // JSON - Tüm sipariş verisi
  createdAt          DateTime  @default(now())
  syncedAt           DateTime?

  @@unique([shop, ticimaxOrderNo])
  @@index([shop, status])
}


