{% comment %}
  Horizontal Dropdown Filter Panel - Advanced Version
  Features:
  - Form-based filtering with AbortController for robust AJAX
  - Hides unavailable (0 count) options
  - Fixed bottom bar for Mobile
  - Desktop: Grid layout
  - Mobile: Accordion layout
{% endcomment %}

<style>
  /* ========== BASE STYLES ========== */
  .filter-panel-container {
    width: 100%;
    margin-bottom: 20px;
    position: relative;
    z-index: 100;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  }

  /* ========== TOP BAR ========== */
  .filter-panel-topbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 12px 0;
    border-bottom: 1px solid #e5e5e5;
    gap: 16px;
    flex-wrap: wrap;
  }

  .filter-panel-left {
    display: flex;
    align-items: center;
    gap: 16px;
  }

  .filter-toggle-btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 10px 20px;
    background-color: #1a1a1a;
    color: #fff;
    border: none;
    border-radius: 4px;
    font-size: 13px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    cursor: pointer;
    transition: background-color 0.2s;
  }

  .filter-toggle-btn:hover {
    background-color: #333;
  }

  .filter-badge {
    background: {{ block.settings.accent_color | default: '#f57c00' }};
    color: #fff;
    padding: 2px 8px;
    border-radius: 10px;
    font-size: 11px;
  }

  .filter-product-count strong {
    font-weight: 600;
  }

  /* ========== DROPDOWN PANEL ========== */
  .filter-dropdown-panel {
    display: none;
    background: #fff;
    border: 1px solid #e5e5e5;
    border-top: none;
    box-shadow: 0 8px 24px rgba(0,0,0,0.1);
    z-index: 1000;
  }

  .filter-dropdown-panel.is-open {
    display: block;
  }

  /* Overlay for loading state */
  .filter-loading-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(255,255,255,0.7);
    z-index: 1001;
    display: none;
    justify-content: center;
    align-items: center;
  }

  .filter-dropdown-panel.is-loading .filter-loading-overlay {
    display: flex;
  }

  /* ========== DESKTOP LAYOUT ========== */
  @media (min-width: 769px) {
    .filter-columns-desktop {
      display: grid;
      grid-template-columns: repeat(6, 1fr);
      gap: 0;
      align-items: start;
    }

    .filter-column {
      padding: 20px 16px;
      border-right: 1px solid #f0f0f0;
      min-height: 250px;
    }
    
    .filter-columns-mobile { display: none; }
    
    /* Remove padding bottom on desktop */
    .filter-dropdown-panel { padding-bottom: 0; }
  }

  /* ========== MOBILE LAYOUT ========== */
  @media (max-width: 768px) {
    .filter-columns-desktop { display: none; }
    .filter-columns-mobile { display: block; }

    .filter-dropdown-panel {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      z-index: 9999;
      overflow-y: auto;
      border: none;
      /* Padding for bottom fixed bar */
      padding-bottom: 80px; 
    }

    .filter-mobile-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 16px;
      border-bottom: 1px solid #e5e5e5;
      background: #fff;
      position: sticky;
      top: 0;
      z-index: 20;
    }

    .filter-accordion-item { border-bottom: 1px solid #e5e5e5; }
    
    .filter-accordion-header {
      padding: 16px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      cursor: pointer;
      font-weight: 600;
    }

    .filter-content-wrapper {
        min-height: 100%;
        padding-bottom: 20px;
    }
  }

  /* ========== FILTER ITEMS ========== */
  .filter-column-title {
    font-size: 12px;
    font-weight: 700;
    text-transform: uppercase;
    margin-bottom: 16px;
    padding-bottom: 8px;
    border-bottom: 2px solid #1a1a1a;
    display: inline-block;
  }

  .filter-items-list {
    list-style: none;
    padding: 0;
    margin: 0;
    max-height: 300px;
    overflow-y: auto;
  }
  
  .filter-items-list::-webkit-scrollbar { width: 4px; }
  .filter-items-list::-webkit-scrollbar-thumb { background: #ccc; border-radius: 2px; }

  .filter-label {
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 6px 0;
    cursor: pointer;
    font-size: 13px;
    color: #333;
    transition: color 0.1s;
  }

  .filter-label:hover {
    color: {{ block.settings.accent_color | default: '#f57c00' }};
  }

  /* Hide native */
  .filter-native-checkbox {
    position: absolute;
    opacity: 0;
    cursor: pointer;
    height: 0;
    width: 0;
  }

  /* Styled Checkbox */
  .filter-checkbox-styled {
    width: 18px;
    height: 18px;
    border: 1px solid #cfcfcf;
    border-radius: 3px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #fff;
    flex-shrink: 0;
    transition: all 0.15s ease;
  }

  .filter-native-checkbox:checked + .filter-checkbox-styled {
    background: #1a1a1a;
    border-color: #1a1a1a;
  }

  .filter-checkbox-icon {
    width: 12px;
    height: 12px;
    stroke: #fff;
    stroke-width: 3;
    opacity: 0;
    transition: opacity 0.1s;
  }

  .filter-native-checkbox:checked + .filter-checkbox-styled .filter-checkbox-icon {
    opacity: 1;
  }

  .filter-count {
    font-size: 12px;
    color: #999;
    margin-left: auto;
  }

  /* Price Fields */
  .filter-price-inputs {
    display: flex;
    align-items: center;
    gap: 10px;
  }
  .filter-price-field {
    display: flex;
    border: 1px solid #ddd;
    border-radius: 4px;
    flex: 1;
  }
  .filter-price-currency {
    padding: 8px;
    background: #f5f5f5;
    border-right: 1px solid #ddd;
    color: #666;
    font-size: 13px;
  }
  .filter-price-input {
    border: none;
    padding: 8px;
    width: 100%;
    font-size: 13px;
  }

  /* ========== ACTIONS BAR ========== */
  .filter-actions {
    display: flex;
    justify-content: flex-end;
    align-items: center;
    gap: 12px;
    padding: 16px 20px;
    border-top: 1px solid #e5e5e5;
    background: #fafafa;
  }

  @media (max-width: 768px) {
    .filter-actions {
      position: fixed;
      bottom: 0;
      left: 0;
      right: 0;
      background: #fff;
      box-shadow: 0 -4px 16px rgba(0,0,0,0.1);
      z-index: 10000;
      padding: 16px;
      justify-content: space-between; /* Spread clear and apply */
    }
    
    .filter-apply-btn { width: auto; flex: 1; margin-left:12px; }
  }

  .filter-apply-btn {
    padding: 12px 30px;
    background: {{ block.settings.accent_color | default: '#f57c00' }};
    color: #fff;
    border: none;
    border-radius: 4px;
    font-weight: 700;
    cursor: pointer;
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    transition: opacity 0.2s;
  }
  
  .filter-apply-btn:hover {
    opacity: 0.9;
  }

  .filter-clear-btn {
    text-decoration: underline;
    font-size: 13px;
    color: #666;
    cursor: pointer;
  }

  .filter-show-more {
    display: inline-block;
    margin-top: 10px;
    font-size: 12px;
    color: {{ block.settings.accent_color | default: '#f57c00' }};
    text-decoration: none;
    cursor: pointer;
    font-weight: 600;
  }
  
  /* Loading Spinner */
  .filter-spinner {
    width: 30px;
    height: 30px;
    border: 3px solid #f3f3f3;
    border-top: 3px solid {{ block.settings.accent_color | default: '#f57c00' }};
    border-radius: 50%;
    animation: spin 1s linear infinite;
  }
  @keyframes spin { 0% { transform: rotate(0deg); } 100% { transform: rotate(360deg); } }
</style>

{% assign results = collection %}
{% if request.page_type == 'search' %}
  {% assign results = search %}
{% endif %}

<div class="filter-panel-container" id="FilterPanelContainer">
  
  <div class="filter-panel-topbar">
    <div class="filter-panel-left">
      <button class="filter-toggle-btn" id="FilterToggleBtn">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="4" y1="6" x2="20" y2="6"></line>
          <line x1="4" y1="12" x2="20" y2="12"></line>
          <line x1="4" y1="18" x2="20" y2="18"></line>
          <circle cx="8" cy="6" r="2" fill="currentColor"></circle>
          <circle cx="16" cy="12" r="2" fill="currentColor"></circle>
          <circle cx="10" cy="18" r="2" fill="currentColor"></circle>
        </svg>
        FİLTRELER
      </button>

      <span class="filter-product-count">
        <strong>{{ results.results_count | default: results.products_count }}</strong> Ürün
      </span>
    </div>
  </div>

  <form id="FilterForm" class="filter-dropdown-panel" onsubmit="return false;">
    <div class="filter-loading-overlay">
      <div class="filter-spinner"></div>
    </div>

    <!-- Mobile Header -->
    <div class="filter-mobile-header" style="display:none;">
      <span style="font-weight:700; font-size:16px;">Filtreler</span>
      <button type="button" id="FilterMobileClose" style="background:none; border:none; padding:5px;">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </button>
    </div>

    <div class="filter-content-wrapper">
      
      <!-- DESKTOP -->
      <div class="filter-columns-desktop">
        {% for filter in results.filters %}
          <div class="filter-column">
            <div class="filter-column-title">{{ filter.label }}</div>
            
            {% if filter.type == 'list' %}
              <ul class="filter-items-list">
                {% for value in filter.values %}
                  {% comment %} HIDE UNAVAILABLE OPTIONS (Count 0 AND Not Active) {% endcomment %}
                  {% unless value.count == 0 and value.active == false %}
                    <li {% if forloop.index > 8 %}class="hidden-item" style="display:none;"{% endif %}>
                      <label class="filter-label">
                        <input type="checkbox" 
                               name="{{ value.param_name }}" 
                               value="{{ value.value }}"
                               class="filter-native-checkbox"
                               {% if value.active %}checked{% endif %}>
                        
                        <span class="filter-checkbox-styled">
                          <svg class="filter-checkbox-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                           <polyline points="20 6 9 17 4 12"></polyline>
                          </svg>
                        </span>
                        <span class="filter-text">{{ value.label }}</span>
                        <span class="filter-count">({{ value.count }})</span>
                      </label>
                    </li>
                  {% endunless %}
                {% endfor %}
              </ul>
              {% if filter.values.size > 8 %}
                 <a class="filter-show-more" onclick="toggleShowMore(this)">DAHA FAZLA GÖSTER</a>
              {% endif %}

            {% elsif filter.type == 'price_range' %}
               {% render 'price-range-inputs', filter: filter %}
            {% endif %}
          </div>
        {% endfor %}
      </div>

      <!-- MOBILE -->
      <div class="filter-columns-mobile">
        {% for filter in results.filters %}
          <div class="filter-accordion-item" data-filter-label="{{ filter.label }}">
            <div class="filter-accordion-header">
              {{ filter.label }}
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="m6 9 6 6 6-6"/>
              </svg>
            </div>
            <div class="filter-accordion-content">
              {% if filter.type == 'list' %}
                <ul class="filter-items-list">
                  {% for value in filter.values %}
                    {% unless value.count == 0 and value.active == false %}
                      <li>
                        <label class="filter-label">
                          <input type="checkbox" 
                                 name="{{ value.param_name }}" 
                                 value="{{ value.value }}"
                                 class="filter-native-checkbox"
                                 {% if value.active %}checked{% endif %}>
                          <span class="filter-checkbox-styled">
                            <svg class="filter-checkbox-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                             <polyline points="20 6 9 17 4 12"></polyline>
                            </svg>
                          </span>
                          <span class="filter-text">{{ value.label }}</span>
                          <span class="filter-count">({{ value.count }})</span>
                        </label>
                      </li>
                    {% endunless %}
                  {% endfor %}
                </ul>
              {% elseif filter.type == 'price_range' %}
                 <div class="filter-price-inputs">
                   <div class="filter-price-field">
                     <span class="filter-price-currency">₺</span>
                     <input type="number" name="{{ filter.min_value.param_name }}" class="filter-price-input" placeholder="Min" value="{{ filter.min_value.value | money_without_currency | replace: ',', '' }}">
                   </div>
                   <div class="filter-price-field">
                     <span class="filter-price-currency">₺</span>
                     <input type="number" name="{{ filter.max_value.param_name }}" class="filter-price-input" placeholder="Max" value="{{ filter.max_value.value | money_without_currency | replace: ',', '' }}">
                   </div>
                 </div>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>

    </div>

    <!-- Actions -->
    <div class="filter-actions">
      <span class="filter-clear-btn" id="FilterClearBtn">Temizle</span>
      <button type="button" class="filter-apply-btn" id="FilterApplyBtn">UYGULA</button>
    </div>
  </form>
</div>

<script>
class FilterPanel {
  constructor() {
    this.container = document.getElementById('FilterPanelContainer');
    this.form = document.getElementById('FilterForm');
    this.panel = document.querySelector('.filter-dropdown-panel');
    this.toggleBtn = document.getElementById('FilterToggleBtn');
    this.abortController = null;

    this.initEvents();
    this.initMobileEvents();
  }

  initEvents() {
    this.toggleBtn.addEventListener('click', () => this.togglePanel());
    
    document.addEventListener('click', (e) => {
      if (window.innerWidth > 768 && 
          this.panel.classList.contains('is-open') && 
          !this.container.contains(e.target)) {
        this.closePanel();
      }
    });

    // CHANGE EVENT: Handle Checkbox Changes
    this.form.addEventListener('change', (e) => {
      if (e.target.type === 'checkbox') {
        // Ensure checked attribute matches for safety, though DOM is source of truth
        if(e.target.checked) e.target.setAttribute('checked', 'checked');
        else e.target.removeAttribute('checked');

        this.updateFilterCounts();
      }
    });

    this.form.querySelectorAll('input[type="number"]').forEach(input => {
        input.addEventListener('change', () => this.updateFilterCounts());
    });

    document.getElementById('FilterApplyBtn').addEventListener('click', (e) => {
      e.preventDefault();
      this.applyFilters();
    });

    document.getElementById('FilterClearBtn').addEventListener('click', () => {
      this.clearFilters();
    });
  }

  initMobileEvents() {
    const closeBtn = document.getElementById('FilterMobileClose');
    if (closeBtn) closeBtn.addEventListener('click', () => this.closePanel());

    this.panel.addEventListener('click', (e) => {
      const header = e.target.closest('.filter-accordion-header');
      if (header) {
        const item = header.parentElement;
        item.classList.toggle('is-open');
      }
    });
  }

  togglePanel() {
    const isOpen = this.panel.classList.contains('is-open');
    if (isOpen) this.closePanel();
    else this.openPanel();
  }

  openPanel() {
    this.panel.classList.add('is-open');
    if (window.innerWidth <= 768) {
        document.querySelector('.filter-mobile-header').style.display = 'flex';
        document.body.style.overflow = 'hidden';
    }
  }

  closePanel() {
    this.panel.classList.remove('is-open');
    if (window.innerWidth <= 768) {
        document.querySelector('.filter-mobile-header').style.display = 'none';
        document.body.style.overflow = '';
    }
  }

  getSearchParams() {
    const formData = new FormData(this.form);
    const searchParams = new URLSearchParams(formData);
    return searchParams.toString();
  }

  async updateFilterCounts() {
    // Abort previous request if running
    if (this.abortController) {
      this.abortController.abort();
    }
    this.abortController = new AbortController();

    this.panel.classList.add('is-loading');
    
    const params = this.getSearchParams();
    
    // Attempt to find Section ID dynamically
    const sectionElement = this.container.closest('[id^="shopify-section-"]');
    const sectionId = sectionElement ? sectionElement.id.replace('shopify-section-', '') : '';
    
    // Add timestamp to prevent caching
    const url = `${window.location.pathname}?${params}&section_id=${sectionId}&_=${new Date().getTime()}`;

    try {
      const response = await fetch(url, { signal: this.abortController.signal });
      if (!response.ok) throw new Error('Fetch failed');

      const html = await response.text();
      const parser = new DOMParser();
      const doc = parser.parseFromString(html, 'text/html');
      
      const newWrapper = doc.querySelector('.filter-content-wrapper');
      const currentWrapper = this.form.querySelector('.filter-content-wrapper');
      
      if (newWrapper && currentWrapper) {
         // Save open accordions state
         const openLabels = [];
         currentWrapper.querySelectorAll('.filter-accordion-item.is-open').forEach(item => {
             const label = item.getAttribute('data-filter-label');
             if(label) openLabels.push(label);
         });

         currentWrapper.innerHTML = newWrapper.innerHTML;

         // Restore open accordions
         openLabels.forEach(label => {
             const newItem = currentWrapper.querySelector(`.filter-accordion-item[data-filter-label="${label}"]`);
             if (newItem) newItem.classList.add('is-open');
         });
      }
    } catch (error) {
      if (error.name !== 'AbortError') {
        console.error('Filter update error:', error);
      }
    } finally {
      this.panel.classList.remove('is-loading');
    }
  }

  applyFilters() {
    const params = this.getSearchParams();
    window.location.href = `${window.location.pathname}?${params}`;
  }

  clearFilters() {
     window.location.href = window.location.pathname;
  }
}

window.toggleShowMore = function(btn) {
  const list = btn.previousElementSibling;
  const hiddenItems = list.querySelectorAll('.hidden-item');
  const isExpanded = btn.getAttribute('data-expanded') === 'true';
  
  if (isExpanded) {
    hiddenItems.forEach(item => item.style.display = 'none');
    btn.textContent = 'DAHA FAZLA GÖSTER';
    btn.setAttribute('data-expanded', 'false');
  } else {
    hiddenItems.forEach(item => item.style.display = '');
    btn.textContent = 'DAHA AZ GÖSTER';
    btn.setAttribute('data-expanded', 'true');
  }
}

document.addEventListener('DOMContentLoaded', () => {
  new FilterPanel();
});
</script>

